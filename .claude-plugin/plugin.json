{
  "name": "enf",
  "description": "Next.js 16 + Prisma 7 + Better Auth 풀스택 개발을 위한 Claude Code 플러그인 (etvibe-nextjs-fullstack)",
  "version": "0.9.0",
  "author": {
    "name": "lemon-etvibe"
  },
  "repository": "https://github.com/lemon-etvibe/etvibe-nextjs-fullstack",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "prisma",
    "better-auth",
    "fullstack",
    "typescript",
    "tailwindcss",
    "shadcn-ui"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-typescript.sh \"$TOOL_INPUT_file_path\""
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-server-action.sh \"$TOOL_INPUT_file_path\""
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-prisma-schema.sh \"$TOOL_INPUT_file_path\""
          }
        ]
      }
    ]
  }
}
